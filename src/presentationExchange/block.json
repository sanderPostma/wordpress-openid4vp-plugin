{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "universal-openid4vp-plugin/openid4vp-exchange",
	"version": "0.1.0",
	"title": "OID4VP - Request data from personal wallet",
	"category": "widgets",
	"description": "Start a presentation exchange flow with the personal wallet",
	"example": {},
	"attributes": {
		"openidEndpoint": {
			"type": "string"
		},
		"tokenEndpoint": {
			"type": "string"
		},
		"apiClientId": {
			"type": "string"
		},
		"apiClientSecret": {
			"type": "string"
		},
		"queryId": {
			"type": "string"
		},
		"successUrl": {
			"type": "string"
		},
		"requestUriMethod": {
			"type": "string"
		},
		"clientId": {
			"type": "string"
		},
		"responseType": {
			"type": "string"
		},
		"responseMode": {
			"type": "string"
		},
		"qrCodeEnabled": {
			"type": "boolean",
			"default": true
		},
		"qrSize": {
			"type": "number"
		},
		"qrColorDark": {
			"type": "string"
		},
		"qrColorLight": {
			"type": "string"
		},
		"qrPadding": {
			"type": "number"
		}
	},
	"supports": {
		"color": {
			"background": false,
			"text": true
		},
		"html": false,
		"typography": {
			"fontSize": true
		}
	},
	"textdomain": "openid4vp-exchange",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php",
	"viewScript": "file:./pollStatus.js",
	"script": "file:./dummy.js"
}
